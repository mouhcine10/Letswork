<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="letsworks.Views.Codeckeck">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Code vérification :"

            VerticalOptions="End"
                   Margin="10,10,10,10"
                HorizontalOptions="Start" />

            <Entry  Placeholder="code :" Keyboard="Telephone"  Margin="10,10,10,10"></Entry>

            <Button  Text="Valider"  Clicked="Validercode"  BackgroundColor="#35c4ba" TextColor="White" CornerRadius="15"  WidthRequest="2" HeightRequest="50" Margin="10,10,10,10"></Button>

            <Button  Text="Renvoyer le code"   BackgroundColor="White" TextColor="Black" CornerRadius="15"  WidthRequest="2" HeightRequest="50" Margin="10,10,10,10"></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>